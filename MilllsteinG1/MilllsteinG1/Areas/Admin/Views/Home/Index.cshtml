@model MilllsteinG1.Areas.Admin.Models.HomeModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
@Html.HiddenFor(c => c.Home.Id)
@Html.HiddenFor(c => c.Home.Created)
@Html.HiddenFor(c => c.Home.isDeleted)
@Html.HiddenFor(c => c.Home.Modified)


<div class="container">
    <div class="row outer-Box" style=" margin-top:20px;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Home Page</div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="news_title">
                            <h2>Home Page Content</h2>
                        </div>
                        @Html.TextAreaFor(model => model.Home.Content, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })






                    </div>
                </div>

            </div>

        </div>


    </div>
    <div class="col-md-12 nopadding" style="margin-bottom: 50px!important;">
        <div class="panel panel-primary">
            <div class="panel-heading">Advance Options</div>
            <div class="panel-body">
                <div class="form-group">


                    <div class="form-group">

                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default" })
                        </div>
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>



</div>

  

}
@section Scripts{

    <link href="~/Content/prettify.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.fr.js"></script>


    <script type="text/javascript">

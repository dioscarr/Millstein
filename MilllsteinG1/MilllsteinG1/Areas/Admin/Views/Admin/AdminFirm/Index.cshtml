@model MilllsteinG1.Areas.Admin.Models.FirmModel
    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";
    }


@using (Html.BeginForm("UpdateFirm", "AdminFirm", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(c => c.FirmDetail.id)
    @Html.HiddenFor(c => c.FirmDetail.Created)
    @Html.HiddenFor(c => c.FirmDetail.isDeleted)
    @Html.HiddenFor(c => c.FirmDetail.Modified)
    @Html.HiddenFor(c => c.FirmDetail.FirmTitle)








    <div class="row outer-Box" style=" margin-top:20px;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading"> Advisory</div>
                <div class="panel-body">
                    <div class="form-group">



                        <div class="row firm_title">
                            <div class="col-sm-6 col-xs-12 logo">
                                <a href="~/home"><img src="~/Images/logo-all.png" /></a>
                            </div>
                            <div class="col-sm-6 col-xs-12 firm_sidebar">
                                <ul class="list-inline firm_sidebar_ul">
                                    <li><a href="#">Our firm</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row firm_content">
                            <div class="col-xs-6 visible-lg visible-md visible-sm firm_content_descriprion">
                                @Html.TextAreaFor(model => model.FirmDetail.Content, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })


                              
                            </div>
                            <div class="col-xs-6 visible-lg visible-md visible-sm firm_image">
                                <img src="~/Images/firm-1.jpg" />
                                <div class="image_desc">
                                    <div>
                                        @Html.LabelFor(m => m.ImageUpload, new {@style="color:white;" })
                                        @Html.TextBoxFor(m => m.ImageUpload, new { @type = "file", @style = "color:white;"  })
                                    </div>
                                    <br />

                                    <div class="news_title" >
                                        <h2 style="color:white;">Quote</h2>
                                    </div> 
                                   
                                      
                                    @Html.EditorFor(model => model.FirmDetail.FirmQuote, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                   
                                </div>
                            </div>
                            @* Mobile Devices  *@
                            <div class="col-xs-12 visible-xs firm_image">
                                <img src="~/Images/firm-1.jpg" />
                                <div class="image_desc">
                                    <div>
                                        @Html.LabelFor(m => m.ImageUpload)
                                        @Html.TextBoxFor(m => m.ImageUpload, new { @type = "file" })
                                    </div>
                                    <br/>
                                    @Html.EditorFor(model => model.FirmDetail.FirmQuote, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                   
                                </div>
                            </div>
                            <div class="col-xs-12 visible-xs firm_content_descriprion">
                                @Html.TextAreaFor(model => model.FirmDetail.Content, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })
                            </div>
                        </div>


                    </div>
                </div>

            </div>

        </div>


    </div>

    <div class="col-md-12 nopadding" style="margin-bottom: 50px!important;">
        <div class="panel panel-primary">
            <div class="panel-heading">Advance Options</div>
            <div class="panel-body">
                <div class="form-group">


                    <div class="form-group">

                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default" })
                        </div>
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>

}




@section scripts{
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>



    <link href="~/Content/prettify.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.fr.js"></script>

    <script type="text/javascript">
            $(document).ready(function () {
                $(".advisory_button").click(function () {
                    $(".mobile_left_bar_advisory").slideToggle("slow");
                });

                $('.form_datetime').datetimepicker({

                });
            });
    </script>
}
    

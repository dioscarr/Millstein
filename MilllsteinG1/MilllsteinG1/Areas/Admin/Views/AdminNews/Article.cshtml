@model MilllsteinG1.Areas.Admin.Models.NewsModel
@{
    ViewBag.Title = "Article";
    Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";

    ViewBag.NewsActive = "menu_top_border";
    ViewBag.Firmfooter = "on";
}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        @Html.HiddenFor(c=>c.Article.NewsId)
        @Html.HiddenFor(c => c.Article.Created)
        @Html.HiddenFor(c => c.Article.isDeleted)
        @Html.HiddenFor(c => c.Article.Modified)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="row outer-Box" style=" margin-top:20px;">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading"> News</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="row firm_title">
                                    <div class="col-xs-9 logo">
                                        <a href="~/Admin/home/index"><img src="~/Images/logo-all.png" /></a>
                                    </div>
                                    <div class="col-xs-3 firm_sidebar">
                                        <ul class="list-inline firm_sidebar_ul">
                                            <li><a href="#">News</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-9">

                                        <div class="news_detail">

                                            <div class="news_title">
                                                <h2>News Date</h2>
                                            </div>

                                            <div class="form-group">
                                                <div class="input-group  col-md-12 nopadding ">
                                                    <div class="col-lg-12 nopadding ">
                                                        @Html.EditorFor(model => model.Article.NewsDate, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="news_title">
                                                <h2>Title</h2>
                                            </div>

                                            <span class="news_archive_span">

                                                @Html.EditorFor(model => model.Article.NewsTitle, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                            </span><br />
                                            <div class="news_title">
                                                <h2>Content</h2>
                                            </div>
                                            @Html.TextAreaFor(c => c.Article.NewsContent, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })
                                            <br />
                                            <div class="news_title">
                                                <h2>About Section</h2>
                                            </div>
                                            @Html.TextAreaFor(model => model.Article.NewsAboutContent, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })
                                            <br />
                                            <h3>Contact:</h3>


                                            @foreach (var person in @Model.PersontContacts)
                                {

                                                <span class="news_archive_link">
                                                    <a class="news_archive_link" href="#">
                                                        @Html.EditorFor(model => model.PersontContacts[0].Title, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                                    </a>
                                                </span>
                                                <br />
                                                <span>
                                                    <a class="news_archive_link" href="#">
                                                        @Html.EditorFor(model => model.PersontContacts[0].Email, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                                    </a>
                                                </span>
                                                <br />
                                                <span>
                                                    <a class="news_archive_link" href="#">
                                                        @Html.EditorFor(model => model.PersontContacts[0].Phone, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                                    </a>
                                                </span><br /><br />
                                }

                                        </div>
                                    </div>
                                    <div class="col-xs-3">
                                        <ul class="left_bar_advisory">
                                            <li><a href="~/Admin/AdminNews/index">Recemt News</a></li>
                                            <li><a href="~/Admin/AdminNews/index">Press</a></li>
                                            <li>
                                                <a href="~/Admin/AdminNews/Index?year=2015">
                                                    Archive
                                                    <ul class="news_archive">

                                                        @foreach (var year in @Model.Years)
                                                        {
                                                            <li><a href="~/Admin/AdminNews/Index/@year">@year</a></li>
                                                        }

                                                    </ul>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>


            </div>


            <div class="col-md-12 nopadding" style="margin-bottom: 50px!important;">
                <div class="panel panel-primary">
                    <div class="panel-heading">Advance Options</div>
                    <div class="panel-body">
                        <div class="form-group">


                            <div class="form-group">

                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-4">
                                    @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default" })
                                </div>
                                <div class="col-md-offset-2 col-md-4">
                                    <input type="submit" value="Update" class="btn btn-default" />
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
    
}


            @section Scripts{

                <link href="~/Content/prettify.css" rel="stylesheet" />
                <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
                <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
                <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
                <script src="~/Scripts/ckeditor/ckeditor.js"></script>
                <script src="~/Scripts/bootstrap-datetimepicker.fr.js"></script>


                <script type="text/javascript">
                    $(document).ready(function () {

                        $('.form_datetime').datetimepicker({

                        });
                    });





                </script>
            }

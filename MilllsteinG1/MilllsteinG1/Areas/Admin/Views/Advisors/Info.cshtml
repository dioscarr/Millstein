@model MilllsteinG1.Areas.Admin.Models.TeamModel
@{
    ViewBag.Title = "Info";
    Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";

    ViewBag.AdvisoryActive = "menu_top_border";
}

<div id="returndata">


   
       @using (Html.BeginForm("UpdateMembers", "Advisors", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
        @Html.Partial("LoadTeamMember")

       }

       


   
</div>

@section scripts{

<script src="~/Scripts/jquery-2.1.4.js"></script>


<link href="~/Content/prettify.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.fr.js"></script>

    <script>
        $(function () {
            
            $('.members').click(function (event) {
                var myid = $(this).attr("id");
            $.ajax({
                type:"Get",
                url: "/Admin/advisors/LoadTeamMember/" + $(this).attr("id"),
                success: function (data) {
                    $('#returndata').html(data);
                    window.location.href = "/Admin/advisors/info/" + myid;
                  
                }   
            });
            event.preventDefault();

            });
        });
        //button slideToggle
        $(document).ready(function (e) {
            $(".advisory_button").click(function () {
                $(".mobile_left_bar_advisory").slideToggle("slow");
                e.preventdefault();
            });
        });
    </script>
}
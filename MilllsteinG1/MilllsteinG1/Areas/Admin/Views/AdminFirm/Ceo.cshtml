@model MilllsteinG1.Areas.Admin.Models.CEOModel
@{
    ViewBag.Title = "Ceo";
    Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";
}




@using (Html.BeginForm("UpdateFirm", "AdminFirm", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(c => c.CEODetail.Id)
    @Html.HiddenFor(c => c.CEODetail.Created)
    @Html.HiddenFor(c => c.CEODetail.isDeleted)
    @Html.HiddenFor(c => c.CEODetail.Modified)
    @Html.HiddenFor(c => c.CEODetail.Picture)



    <div class="row outer-Box" style=" margin-top:20px;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading"> Advisory</div>
                <div class="panel-body">
                    <div class="form-group">



                        <div class="row firm_title">
                            <div class="col-sm-6 col-xs-12 logo">
                                <a href="~/home"><img src="~/Images/logo-all.png" /></a>
                            </div>
                            <div class="col-sm-6 col-xs-12 firm_sidebar">
                                <ul class="list-inline firm_sidebar_ul">
                                    <li><a href="#">ceo</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row firm_title firm_content">
                            <div class="col-sm-6 col-xs-12 firm_image">


                                <img src="~/Images/jim_Millstein.jpg" />
                                <br />
                                <br />
                                @Html.CheckBoxFor(c => c.isNewPicture, new { id = "checkIfNew" })
                                <label>Check to select new Image</label>
                                <div id="newPicture" style="display:none;">
                                    @Html.LabelFor(m => m.ImageUpload)
                                    @Html.TextBoxFor(m => m.ImageUpload, new { @type = "file" })

                                </div>
                                <br />
                                <br />

                                <div class="image_desc image_desc_ceo">

                                    <div class="news_title">
                                        <h2 style="color:white;">News Date</h2>
                                    </div>

                                    @Html.EditorFor(model => model.CEODetail.pictureQuote, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })

                                    <div class="news_title">
                                        <h2 style="color:white;">News Date</h2>
                                    </div>
                                    @Html.EditorFor(model => model.CEODetail.pictureQuoteSource, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })

                                    <div class="news_title">
                                        <h2 style="color:white;">News Date</h2>
                                    </div>
                                    <span class="pull-right">
                                        @Html.EditorFor(model => model.CEODetail.PictureQuoteDate, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>

                                    </span>
                                </div>

                                <div class="ceo_company">
                                    <div class="news_title">
                                        <h2>News Date</h2>
                                    </div>
                                    @Html.TextAreaFor(model => model.CEODetail.Description, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })

                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12 ceo_content_descriprion">
                                <div class="news_title">
                                    <h2>News Date</h2>
                                </div>


                                @Html.EditorFor(model => model.CEODetail.FirstName, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })
                                <div class="news_title">
                                    <h2>News Date</h2>
                                </div>
                                @Html.EditorFor(model => model.CEODetail.LastName, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })


                                <div class="news_title">
                                    <h2>News Date</h2>
                                </div>
                                <div class="visible-lg visible-md visible-sm ceo_name_description">
                                    @Html.EditorFor(model => model.CEODetail.Title, new { htmlAttributes = new { @class = " input-group date form_datetime col-lg-4 form-control " } })

                                </div>
                                <div class="news_title">
                                    <h2>News Date</h2>
                                </div>
                                @Html.TextAreaFor(model => model.CEODetail.Content, 80, 10, new { @class = "form-control ckeditor investment-detail-content", @name = "editor1" })



                            </div>
                        </div>


                    </div>
                </div>

            </div>

        </div>


    </div>

    <div class="col-md-12 nopadding" style="margin-bottom: 50px!important;">
        <div class="panel panel-primary">
            <div class="panel-heading">Advance Options</div>
            <div class="panel-body">
                <div class="form-group">


                    <div class="form-group">

                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default" })
                        </div>
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>








}

@section scripts{


    <link href="~/Content/prettify.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.fr.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".advisory_button").click(function () {
                $(".mobile_left_bar_advisory").slideToggle("slow");
            });



            $('#checkIfNew').change(function () {



                $('#newPicture').slideToggle();
            }
            );





        });
    </script>
}

